# Oracle Forms & Reports 14c Environment Variables
# Copy this file to .env and customize as needed

# WebLogic Admin Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=weblogic
ADMIN_PASSWORD=Oracle123

# Port Configuration
ADMIN_PORT=7001
FORMS_PORT=9001
REPORTS_PORT=9002

# JVM Configuration
JAVA_OPTIONS=-Xmx2048m -Xms1024m

# Oracle Paths (usually don't need to change)
ORACLE_HOME=/u01/app/oracle/product/fmw14.1.2.0
DOMAIN_HOME=/u01/app/oracle/config/domains/forms_domain
JAVA_HOME=/u01/app/oracle/product/jdk17

# Container Configuration
CONTAINER_NAME=oracle-forms-14c
NETWORK_NAME=oracle-forms-network

# External Port Mappings (change if you have port conflicts)
EXTERNAL_ADMIN_PORT=7001
EXTERNAL_FORMS_PORT=9001
EXTERNAL_REPORTS_PORT=9002
EXTERNAL_HTTP_PORT=80
EXTERNAL_HTTPS_PORT=443

# Resource Limits
MEMORY_LIMIT=4G
MEMORY_RESERVATION=2G
CPU_LIMIT=2.0
CPU_RESERVATION=1.0

# Nginx Configuration (for proxy profile)
NGINX_IMAGE=nginx:alpine
NGINX_CONTAINER_NAME=oracle-forms-proxy